<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::blog_elements" title="Ves Blog">
                    <resource id="Ves_Blog::posts" title="Manager Posts" sortOrder="10">
                        <resource id="Ves_Blog::post_new" title="New Post" sortOrder="10" />
                        <resource id="Ves_Blog::post_edit" title="Edit Post" sortOrder="20" />
                        <resource id="Ves_Blog::post_save" title="Save Post" sortOrder="30" />
                        <resource id="Ves_Blog::post_delete" title="Delete Post" sortOrder="40" />
                    </resource>
                    <resource id="Ves_Blog::category" title="Manager Categories" sortOrder="30">
                        <resource id="Ves_Blog::category_new" title="New Category" sortOrder="10" />
                        <resource id="Ves_Blog::category_edit" title="Edit Category" sortOrder="20" />
                        <resource id="Ves_Blog::category_save" title="Save Category" sortOrder="30" />
                        <resource id="Ves_Blog::category_delete" title="Delete Category" sortOrder="40" />
                    </resource>
                    <resource id="Ves_Blog::comment" title="Manager Comments" sortOrder="40">
                        <resource id="Ves_Blog::comment_new" title="New Comment" sortOrder="10" />
                        <resource id="Ves_Blog::comment_edit" title="Edit Comment" sortOrder="20" />
                        <resource id="Ves_Blog::comment_save" title="Save Comment" sortOrder="30" />
                        <resource id="Ves_Blog::comment_delete" title="Delete Comment" sortOrder="40" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ves_Blog::config_blog" title="Blog" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>