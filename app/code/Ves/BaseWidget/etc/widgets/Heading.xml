<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget id="ves_base_heading" class="Ves\BaseWidget\Block\Widget\Heading">
		<label translate="true">Ves Base: Heading Text</label>
		<description translate="true">Heading Text: h1,h2,h3,h4,h5,h6</description>
		<parameters>
			<parameter name="prefix" xsi:type="text" visible="true">
				<label translate="true">Prefix Class</label>
				<description translate="true">If you wish to style particular content element differently, then use this field to add a class name and then refer to it in your css file.</description>
			</parameter>

			<parameter name="content" xsi:type="conditions" visible="true" class="Ves\BaseWidget\Block\Adminhtml\System\Config\Form\Field\Textarea">
				<label translate="true">Content</label>
				<description translate="true">Will be showed on separator.</description>
			</parameter>

			<parameter name="heading_tag" xsi:type="select"  visible="true">
				<label translate="true">Theme</label>
				<options>
					<option name="h1" value="h1">
                        <label translate="true">H1</label>
                    </option>
                    <option name="h2" value="h2" selected="true">
                        <label translate="true">H2</label>
                    </option>
                    <option name="h3" value="h3">
                        <label translate="true">H3</label>
                    </option>
                    <option name="h4" value="h4" selected="true">
                        <label translate="true">H4</label>
                    </option>
                    <option name="h5" value="h5">
                        <label translate="true">H5</label>
                    </option>
                    <option name="h6" value="h6" selected="true">
                        <label translate="true">H6</label>
                    </option>
				</options>
			</parameter>
		</parameters>
	</widget>
</widgets>