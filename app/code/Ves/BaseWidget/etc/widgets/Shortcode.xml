<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget id="ves_basewidget_shortcode" class="Ves\BaseWidget\Block\Widget\Shortcode">
        <label translate="true">Ves Base: Generate a Shortcode</label>
        <description>Generate a short code which magento support: {{block..}} {{widget..}}</description>
        <parameters>
            <parameter name="shortcode" xsi:type="conditions" visible="true" class="Ves\BaseWidget\Block\Adminhtml\System\Config\Form\Field\Textarea">
                <label translate="true">Shortcode</label>
                <description translate="true">Input Shortcode which magento support. For example: {{block...}} {{widget..}}.</description>
            </parameter>
        </parameters>
    </widget>
</widgets>