<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget id="ves_base_facebook" class="Ves\BaseWidget\Block\Widget\Facebook">
		<label translate="true">Ves Base: Facebook Widget</label>
		<description translate="true">Facebook Widget</description>
		<parameters>
			<parameter name="title" xsi:type="text" visible="true">
				<label translate="true">Widget Title</label>
				<description translate="true">This tile will be showed as header of widget block. Empty to disable</description>
			</parameter>
			<parameter name="enable_collapse" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Enable Collapse</label>
			</parameter>
			<parameter name="custom_id" xsi:type="text"  visible="true">
				<label translate="true">Custom Block Id</label>
			</parameter>

			<parameter name="facebook_url" xsi:type="text"  visible="true">
				<label translate="true">Facebook URL</label>
				<description translate="true"><![CDATA[Example: <b>https://www.facebook.com/venustheme</b>]]></description>
			</parameter>
			
			<parameter name="app_id" xsi:type="text"  visible="true">
				<label translate="true">Facebook App Id</label>
				<description translate="true"><![CDATA[You should create a facebook app to get app id. https://developers.facebook.com/docs/apps/register <br/>For example: 1451966991726173]]></description>
			</parameter>

			<parameter name="width" xsi:type="text"  visible="true">
				<label translate="true">Widget Width</label>
				<description translate="true"><![CDATA[Example: 260 .Then widget will have width 260px]]></description>
			</parameter>

			<parameter name="height" xsi:type="text"  visible="true">
				<label translate="true">Widget Height</label>
				<description translate="true"><![CDATA[Example: 300 .Then widget will have height 300px]]></description>
			</parameter>

			<parameter name="enable_showfriends" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Show Friends</label>
				<description translate="true">Default should be Yes</description>
			</parameter>

			<parameter name="small_header" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Small Header</label>
				<description translate="true">Default should be Yes</description>
			</parameter>

			<parameter name="hide_cover" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Hide Cover Image</label>
				<description translate="true">Default should be Yes</description>
			</parameter>
			<parameter name="enable_posts" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Show Posts</label>
				<description translate="true">Default should be Yes</description>
			</parameter>

			<parameter name="custom_css" xsi:type="text"  visible="true">
				<label translate="true">Custom CSS</label>
				<description translate="true"><![CDATA[Example: <b>background: #25252A; color: #CCC;</b>]]></description>
			</parameter>

			<parameter name="use_iframe" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Use Widget Iframe</label>
				<description translate="true">Default should be Yes</description>
			</parameter>
		</parameters>
	</widget>
</widgets>