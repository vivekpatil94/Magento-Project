<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">

    <widget id="ves_basewidget_pinboard" class="Ves\BaseWidget\Block\Widget\Pinboard">
        <label translate="true">Ves Base: Pinterest - Profile Widget</label>
        <description>Pinterest Profile Or Board Widget</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true">
                <label translate="true">Widget Title</label>
                <description translate="true">This tile will be showed as header of widget block. Empty to disable</description>
            </parameter>

            <parameter name="enable_collapse" xsi:type="select"  visible="true" source_model="Magento\Config\Model\Config\Source\Yesno">
                <label translate="true">Enable Collapse</label>
            </parameter>

            <parameter name="url" xsi:type="text"  visible="true">
                <label translate="true">Url</label>
                 <description translate="true">For example: http://www.pinterest.com/pinterest/ or http://www.pinterest.com/pinterest/pin-pets/</description>
            </parameter>

            <parameter name="select_type" xsi:type="select"  visible="true">
                <label translate="true">Widget type</label>
                <description translate="true">Select Pinterest Widget Type (Profile or Board).</description>
                <options>
                    <option name="profile" value="profile" selected="true">
                        <label translate="true">Profile Widget</label>
                    </option>
                    <option name="board" value="board">
                        <label translate="true">Board Widget</label>
                    </option>
                </options>
            </parameter>

            <parameter name="image_width" xsi:type="text"  visible="true">
                <label translate="true">Image Width</label>
                 <description translate="true">Default: 80</description>
            </parameter>

            <parameter name="board_height" xsi:type="text"  visible="true">
                <label translate="true">Board Height</label>
                 <description translate="true">Default: 320</description>
            </parameter>

            <parameter name="board_width" xsi:type="text"  visible="true">
                <label translate="true">Board Width</label>
                 <description translate="true">Default: 371</description>
            </parameter>

        </parameters>
    </widget>
</widgets>