<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::pagebuilder_elements" title="Manage Elements Builder and Pages Builder">
                    <resource id="Ves_PageBuilder::block" title="Element Profiles" sortOrder="10">
                        <resource id="Ves_PageBuilder::block_new" title="Add New Element" sortOrder="10" />
                        <resource id="Ves_PageBuilder::block_edit" title="Edit Element" sortOrder="20" />
                        <resource id="Ves_PageBuilder::block_save" title="Save Element" sortOrder="30" />
                        <resource id="Ves_PageBuilder::block_delete" title="Delete Element" sortOrder="40" />
                        <resource id="Ves_PageBuilder::block_convert_template" title="Convert Element Profiles To Template" sortOrder="50" />
                    </resource>
                    <resource id="Ves_PageBuilder::page" title="Page Profiles" sortOrder="30">
                        <resource id="Ves_PageBuilder::page_new" title="Add New Page" sortOrder="10" />
                        <resource id="Ves_PageBuilder::page_edit" title="Edit Page" sortOrder="20" />
                        <resource id="Ves_PageBuilder::page_save" title="Save Page" sortOrder="30" />
                        <resource id="Ves_PageBuilder::page_delete" title="Delete Page" sortOrder="40" />
                        <resource id="Ves_PageBuilder::page_convert_template" title="Convert Profiles To Template" sortOrder="50" />
                    </resource>
                    
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Ves_PageBuilder::config" title="Config Settings" />
                            <resource id="Ves_PageBuilder::config_pagebuilder" title="Pages Builder" />
                            <resource id="Ves_PageBuilder::config_livecss" title="Live Css Editor" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>