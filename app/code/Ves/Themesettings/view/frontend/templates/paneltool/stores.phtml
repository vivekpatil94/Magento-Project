?>
<?php if (count($block->getGroups())>1): ?>
    <div class="switcher store switcher-store" id="switcher-store">
        <label for="select-store"><?php echo __('Select Store') ?></label>
        <select id="select-store" title="<?php echo __('Select Store') ?>" name="store">
            <?php foreach ($this->getGroups() as $_group): ?>
                <?php $_selected = ($_group->getId()==$this->getCurrentGroupId()) ? ' selected="selected"' : '' ?>
                <?php $defaultStore = $_group->getDefaultStore(); ?>
                <option value="<?php echo $this->getUrl('stores/store/switch',["___store"=>$defaultStore->getCode(),]); ?>" <?php echo $_selected ?>><?php echo $block->escapeHtml($_group->getName()) ?></option>
            <?php endforeach; ?>
        </select>
    </div>
<?php endif; ?>